
<h1><%=@patient.name%></h1>
<h2><%=@patient.age%></h2>
<ul>
  <%@patient.appointments.each do |appointment|%>
  <li><%=link_to appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M" ), appointment%> | <%=link_to appointment.doctor.name, doctor_path(appointment.doctor)%> </li>
  <%end%>
</ul>
